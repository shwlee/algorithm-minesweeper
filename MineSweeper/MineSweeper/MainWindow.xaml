<Window
    x:Class="MineSweeper.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:i="http://schemas.microsoft.com/xaml/behaviors"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="clr-namespace:MineSweeper.Models"
    xmlns:u="clr-namespace:MineSweeper.Utils"
    mc:Ignorable="d"
    Title="MainWindow"
    Height="450"
    Width="800">
    <Window.Resources>
        <DataTemplate DataType="{x:Type models:Box}">
            <!--  TODO : box control 따로 제작.  -->
            <Grid
                Background="#FFBFBFBF"
                Margin="2">
                <Border
                    x:Name="Part_Number"
                    BorderThickness="1"
                    BorderBrush="#FF262626">

                    <TextBlock
                        Text="{Binding Number}"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Border>
                <Border
                    x:Name="Part_Mine"
                    BorderThickness="3"
                    BorderBrush="#FFB21016"
                    Visibility="Collapsed">

                    <TextBlock
                        Text="B"
                        FontWeight="ExtraBold"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center" />
                </Border>
                <Button
                    MouseRightButtonDown="Part_CoverButton_MouseRightButtonDown"
                    x:Name="Part_CoverButton"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Command="{x:Static u:BoxCommander.OpenCommand}"
                    CommandParameter="{Binding}"
                    u:BoxCommander.MarkHandleCommand="{x:Static u:BoxCommander.MarkCommand}">
                    <Grid
                        x:Name="Part_MarkPanel"
                        Visibility="Collapsed">
                        <TextBlock
                            Text="F"
                            Foreground="Red"
                            FontWeight="ExtraBold"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center" />
                    </Grid>
                </Button>
            </Grid>
            <DataTemplate.Triggers>
                <DataTrigger
                    Binding="{Binding IsMine}"
                    Value="True">
                    <Setter TargetName="Part_Number" Property="Visibility" Value="Collapsed" />
                    <Setter TargetName="Part_Mine" Property="Visibility" Value="Visible" />
                </DataTrigger>
                <DataTrigger
                    Binding="{Binding IsOpened}"
                    Value="True">
                    <Setter TargetName="Part_CoverButton" Property="Visibility" Value="Collapsed" />
                </DataTrigger>
                <DataTrigger
                    Binding="{Binding IsMarked}"
                    Value="True">
                    <Setter TargetName="Part_MarkPanel" Property="Visibility" Value="Visible" />
                </DataTrigger>
            </DataTemplate.Triggers>
        </DataTemplate>
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition />
        </Grid.RowDefinitions>

        <Grid
            Grid.Row="0"
            HorizontalAlignment="Center">
            <StackPanel Orientation="Horizontal">
                <StackPanel
                    Orientation="Horizontal"
                    Margin="10,0">
                    <CheckBox
                        Content="Show All "
                        IsChecked="{Binding IsShowAll}"
                        VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal"
                    Margin="10,0">
                    <CheckBox
                        Content="Use Players"
                        IsChecked="{Binding UsePlayers}"
                        VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <TextBlock
                        Text="Column : "
                        VerticalAlignment="Center" />
                    <TextBox
                        Width="100"
                        Text="{Binding Columns}"
                        VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal"
                    Margin="10,0">
                    <TextBlock
                        Text="Row : "
                        VerticalAlignment="Center" />
                    <TextBox
                        Width="100"
                        Text="{Binding Rows}"
                        VerticalAlignment="Center" />
                </StackPanel>
                <StackPanel
                    Orientation="Horizontal"
                    Margin="10,0">
                    <TextBlock
                        Text="Mine count : "
                        VerticalAlignment="Center" />
                    <TextBox
                        Width="100"
                        Text="{Binding MineCount}"
                        VerticalAlignment="Center" />
                </StackPanel>
            </StackPanel>
        </Grid>

        <Grid
            Grid.Row="0"
            HorizontalAlignment="Right">
            <Button
                Width="70"
                Margin="3"
                Content="SET"
                Command="{Binding ApplyLayoutCommand}"
                VerticalContentAlignment="Center"
                VerticalAlignment="Center" />
        </Grid>

        <ItemsControl
            Grid.Row="1"
            ItemsSource="{Binding Boxes}">
            <ItemsControl.ItemsPanel>
                <ItemsPanelTemplate>
                    <UniformGrid
                        Grid.Row="1"
                        Background="Chartreuse"
                        Columns="{Binding UniformColumns}"
                        Rows="{Binding UniformRows}" />
                </ItemsPanelTemplate>
            </ItemsControl.ItemsPanel>
        </ItemsControl>
    </Grid>
</Window>
